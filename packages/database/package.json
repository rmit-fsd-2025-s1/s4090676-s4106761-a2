{
  "name": "@repo/database",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint",
    "lint-staged": "pretty-quick --staged",
    "prepare": "npm run build",
    "dev": "tsc -p tsconfig.build.json --watch"
  },
  "exports": {
    "./datasource": {
      "import": "./dist/mysql/connection.js",
      "types": "./dist/mysql/connection.d.ts"
    },
    "./fixtures/*": {
      "import": "./dist/mysql/fixtures/*.js",
      "types": "./dist/mysql/fixtures/*.d.ts"
    },
    "./entities/*": {
      "import": "./dist/entities/*.js",
      "types": "./dist/entities/*.d.ts"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts"
    }
  },
  "dependencies": {
    "@repo/types": "0.0.1",
    "mysql2": "^3.14.1",
    "typeorm": "^0.3.24"
  }
}
