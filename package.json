{
  "name": "liam-aaron-full-stack-a2",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present -- --fix",
    "clean": "npm run clean --workspaces --if-present",
    "dev": "concurrently \"npm run dev -w server-user\" \"npm run dev -w server-admin\" \"npm run dev -w web-user\" \"npm run dev -w @repo/database\" \"npm run dev -w web-admin\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "concurrently": "^9.1.2",
    "pretty-quick": "^4.1.1",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3"
  },
  "packageManager": "npm@11.4.0",
  "engines": {
    "node": "22.15.0",
    "npm": "11.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run clean ; npm ci ; npm run lint-staged --workspaces --if-present ; npm run type-check"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  }
}
