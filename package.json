{
  "name": "liam-aaron-full-stack-a2",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present -- --fix",
    "dev": "(trap 'kill 0' SIGINT; npm run dev -w server-user & npm run dev -w web-user & npm run dev -w @repo/database)",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "devDependencies": {
    "pretty-quick": "^4.1.1",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3"
  },
  "packageManager": "npm@11.4.0",
  "engines": {
    "node": "22.15.0",
    "npm": "11.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged --workspaces --if-present ; npm run type-check"
  }
}
